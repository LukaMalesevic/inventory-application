extends layout
block content
  div.content
    h1= title 
    form(method="POST")
      label(for="steroid_name") Name:
      input(type="text" name="steroid_name" placeholder="Steroid name")
      label(for="steroid_description") Description:
      input(type="text" name="steroid_description" placeholder="Steroid description")
      label(for="steroid_category") Category:
      select#steroid(name="steroid_category" required) 
        option(value="") select category 
        for category in categories 
          option(value=category._id) #{category.name} 
      label(for="steroid_price") Price:
      input(type="number" name="steroid_price" placeholder="Steroid price")
      label(for="steroid_count") Count:
      input(type="number" name="steroid_count" placeholder="Steroid count")
      input(type="submit" value="Submit")
      